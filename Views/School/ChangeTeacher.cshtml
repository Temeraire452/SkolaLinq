@model SkolaLinq.Models.Teacher

<h2>Ändra lärare för Programmering 1</h2>

<form asp-action="ChangeTeacher" method="post">
    <div class="form-group">
        <label for="newTeacherId">Välj ny lärare:</label>
        <select id="newTeacherId" name="newTeacherId" class="form-control" required>
            <option value="@Model.TeacherId">@Model.TeacherName</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Spara</button>
</form>

<a href="@Url.Action("Index", "School")">Tillbaka till menyn</a>
